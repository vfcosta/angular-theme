{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es5",
            "es6",
            "es2015.promise",
            "dom"
        ]
    },
    "exclude": [
        "dev-scripts",
        "node_modules",
        "typings/main",
        "typings/main.d.ts"
    ],
    "compileOnSave": false,
    "atom": {
      "rewriteTsconfig": false,
      "formatOnSave": true
    }
}
